<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:context=".ui.recipes.AddRecipeActivity">

        <ImageView
            android:id="@+id/imageViewRecipePhotoAddRecipe"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:contentDescription="placeholder"
            android:src="@drawable/ic_cake_black_24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutRecipeNameAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/imageViewRecipePhotoAddRecipe"
            android:layout_marginBottom="20dp"
            android:textSize="15sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputLayoutEditRecipeNameAddRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_recipe_recipe_name_label" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutRecipeDescriptionAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textInputLayoutRecipeNameAddRecipe"
            android:layout_marginBottom="20dp"
            android:textSize="15sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputLayoutEditRecipeDescriptionAddRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="@string/add_recipe_recipe_description_label" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewRecipeCategory"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayoutRecipeDescriptionAddRecipe"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/add_recipe_recipe_category_label" />

        <Spinner
            android:id="@+id/spinnerRecipeCategory"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRecipeCategory"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textViewRecipeType"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayoutRecipeDescriptionAddRecipe"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/textViewRecipeCategory"
            android:text="@string/add_recipe_recipe_type_label" />

        <Spinner
            android:id="@+id/spinnerRecipeType"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRecipeType"
            android:layout_toEndOf="@id/spinnerRecipeCategory" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutRecipeInstructionsAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/spinnerRecipeCategory"
            android:layout_marginBottom="20dp"
            android:textSize="15sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputLayoutEditRecipeInstructionsAddRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="@string/add_recipe_recipe_instructions_input_label" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
</ScrollView>